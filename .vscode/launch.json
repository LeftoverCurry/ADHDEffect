  "version": "0.2.0",
  "configurations": [
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "/usr/bin/rspec",
      "args": [
        "--require",
        "spec_helper",
        "--require",
        "rails_helper",
        "--format",
        "documentation"
      ]
    },

    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "args": ["-I", "${workspaceRoot}", "${file}"]
    },
    {
      "name": "Debug Local File",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/main.rb"
    },
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": ["server"]
    }
  ]
}
